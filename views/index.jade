extends layout

block content
  .wrapper
    h1= title
    .current
      h3 Current
      img(src="/img/current.jpg", alt="Most recent Scrot")
      table#cent
        thead
          tr
            th Red
            th Blue
          tr
            td {current.Red}
            td {current.Blue}
    .data
      .fights
        h3 Fights:
        table
          thead
            tr
              th id 
              th Red 
              th Blue
              th Ratio
            each val,i in fights
              tr(class=(i % 2 == 0) ? 'odd' : 'even') 
                td #{val.id} 
                td #{val.red} 
                td #{val.blue} 
                td #{val.ratio}
      .fighters
        h3 Fighters:
        table
          thead
            tr
              th Name 
              th Win 
              th Loss
              th Total
              th Rate
            each val,i in fighters
              tr(class=(i % 2 == 0) ? 'odd' : 'even')
                td #{val.name} 
                td #{val.win}
                td #{val.loss}
                td #{val.total}
                td #{val.rate}
